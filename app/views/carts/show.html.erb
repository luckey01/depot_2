<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2>Your Cart</h2>
  <table>
    <% @cart.line_items.each do |line_item| %>
      <tr>
        <td class="quantity"><%= line_item.quantity %></td>
        <td><%= line_item.product.title %></td>
				<td><%= number_to_currency(line_item.product_price) %></td>
        <td class="tot_price"><%= number_to_currency(line_item.tot_price) %></td>
				<td><%= button_to 'Remove item(s)', destroy_from_cart_line_item_url(line_item.id), method: :delete, data: { confirm: 'Are you defs sure?' } %></td>
      </tr>
    <% end %>
    <tfoot>
      <tr>
        <th colspan="3">Total:</th>
        <td class="price"><%= number_to_currency(@cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>
  <%= button_to 'Empty cart', @cart,
                method: :delete,
                data: { confirm: 'Are you sure?' } %>

</article>
